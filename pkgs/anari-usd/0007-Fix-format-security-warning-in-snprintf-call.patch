---
 UsdDevice.cpp | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/UsdDevice.cpp b/UsdDevice.cpp
index 5f800eb..3c13eed 100644
--- a/UsdDevice.cpp
+++ b/UsdDevice.cpp
@@ -210,7 +210,7 @@ void UsdDevice::reportStatus(void* source,
   {
     int count = strlen(format);
     lastStatusMessage.resize(count + 1);
-    std::snprintf(lastStatusMessage.data(), count + 1, format);
+    std::snprintf(lastStatusMessage.data(), count + 1, "%s", format);
   }
 
   if (statusFunc != nullptr)
